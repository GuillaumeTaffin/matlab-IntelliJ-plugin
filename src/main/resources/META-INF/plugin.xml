<idea-plugin>
    <id>com.github.com.kornilovaL</id>
    <name>Matlab Support</name>
    <version>0.2-SNAPSHOT</version>
    <id>MatlabSupport</id>

    <vendor url="https://github.com/kornilova-l" email="kornilova203@gmail.com" />

    <description><![CDATA[
    Matlab syntax highlighting plugin for JetBrains IDEs.
    ]]></description>

    <change-notes><![CDATA[
    <ol>
      <li>Implemented simple syntax highlighting.</li>
    </ol>
    ]]>
    </change-notes>

    <idea-version since-build="162"/>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="com.github.kornilova_l.matlab.MatlabFileTypeFactory"/>
        <lang.parserDefinition language="Matlab" implementationClass="com.github.kornilova_l.matlab.MatlabParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Matlab" implementationClass="com.github.kornilova_l.matlab.MatlabSyntaxHighlighterFactory"/>
        <configurationType implementation="com.github.kornilova_l.matlab.execution.MatlabConfigurationType"/>
        <programRunner implementation="com.github.kornilova_l.matlab.execution.MatlabProgramRunner"/>
        <runConfigurationProducer
                implementation="com.github.kornilova_l.matlab.execution.MatlabRunConfigurationProducer"/>
    </extensions>

</idea-plugin>
